        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LargeCompanyNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
